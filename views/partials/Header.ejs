<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BunnyHop Shop - Your Baby's Choice</title>
  <link rel="shortcut icon" href="/media/logo.png" type="image/x-icon">

  <link rel="stylesheet" href="/stylesheets/design-system.css" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/tw-output.css">
  <link rel="stylesheet" href="/stylesheets/styles.css">

</head>

<body>
<% const totalItems = Array.isArray(cart) ? cart.length : 0; %>


    <header>
      <!-- Top Bar for Trust Signals -->
      <div style="background-color: var(--color-active-primary); color: white; padding: 0.5rem 0; font-size: 0.85rem;">
        <div class="container" style="display: flex; justify-content: space-between; align-items: center;">
          <span><i class="ri-phone-fill"></i> Support: +92 313 8190150</span>
          <span><i class="ri-shield-check-fill"></i> Certified Medical Equipment Supplier</span>
        </div>
      </div>

      <div class="container">
        <nav>
          <!-- Mobile Menu Toggle -->
          <button id="toggleOpen" class="btn btn-outline"
            style="padding: 0.5rem; border: none; font-size: 1.5rem; display: none; color: var(--color-text-primary);">
            <i class="ri-menu-line"></i>
          </button>

          <!-- Logo -->
          <a aria-colspan="flex" href="/" class="logo">
            <span style="color: var(--color-accent-primary); font-size: 2.2rem; line-height: 1;">+</span>
            <span style="letter-spacing: -1px;">MedSurg<span style="color: var(--color-accent-primary);">X</span></span>
          </a>

          <!-- Desktop Navigation -->
          <div class="nav-links">
            <a href="/">Home</a>
            <a href="/clothings/equipment">Equipment</a>
            <a href="/clothings/surgical">Surgical</a>
            <a href="/clothings/supplies">Supplies</a>
            <a href="/orders">Orders</a>
          </div>

          <!-- Icons & User -->
          <div class="nav-icons" style="gap: 1rem;">
            <!-- Search -->
            <div style="position: relative;">
              <button id="searchButton" style="background:none; border:none; cursor:pointer; color: var(--color-text-primary);">
                <i class="ri-search-line"></i>
              </button>
              <form action="/clothings/search" method="get"
                style="display:none; position: absolute; right: 0; top: 120%; background: white; padding: 15px; box-shadow: var(--shadow-lg); border-radius: var(--border-radius-md); border: 1px solid var(--color-border); min-width: 250px; z-index: 20;"
                id="searchBar">
                <div style="display:flex; gap: 5px;">
                  <input name="searched" type="text" placeholder="Search products..."
                    style="width: 100%; padding: 8px 12px; border: 1px solid var(--color-border); border-radius: 4px; font-family: var(--font-body);">
                  <button type="submit" class="btn btn-primary" style="padding: 0.5rem 1rem;"><i class="ri-search-line"></i></button>
                </div>
              </form>
            </div>

            <!-- Cart -->
            <a href="/cart" style="position: relative; color: var(--color-text-primary);">
              <i class="ri-shopping-cart-2-line"></i>
            <span 
              id="cartQuantity"
              class="quantity"
              style="position: absolute; top: -8px; right: -8px; background: var(--color-accent-primary); 
                    color: white; font-size: 0.7rem; padding: 2px 6px; border-radius: 50%;
                    display: <%= totalItems > 0 ? 'inline-block' : 'none' %>;">
              <%= totalItems %>
            </span>
            </a>

            <!-- User Auth -->
            <% if (!user || user==='unsigned' ) { %>
              <a href="/access" class="btn btn-primary signin acc" style="padding: 0.5rem 1.5rem; font-size: 0.9rem; border-radius: 4px;">Sign In</a>
              <% } else { %>
              <div class="relative flex " style="align-items: center; gap: 10px;">
                <!-- Username button -->
                <button id="userDropdownBtn" class="text-sm font-medium px-3 py-1 rounded hover:bg-slate-100 transition" style="border: 1px solid var(--color-border); background: white;">
                  <i class="ri-user-line" style="margin-right: 5px;"></i> <%= user.username %>
                </button>

                <!-- Seller Dashboard Icon -->
                <% if(user.isSeller) { %>
                  <a href="/seller/dashboard" title="Dashboard" class="text-lg hover:text-cyan-600 transition">
                    <i class="ri-dashboard-3-line"></i>
                  </a>
                <% } %>

                <!-- Logout -->
                <a href="/logout" title="Logout" class="text-red-500 hover:text-red-700 transition">
                  <i class="ri-logout-box-r-line"></i>
                </a>
              </div>
            <% } %>
          </div>
        </nav>
      </div>

      <!-- Mobile Menu (Hidden by default) -->
      <div id="collapseMenu" style="display: none; position: fixed; top: 0; left: 0; width: 100%; min-height: 100vh; background: white; z-index: 2000; padding: 2rem;">
        <button id="toggleClose" style="position: absolute; top: 1rem; right: 1rem; background: none; border: none; font-size: 2rem; color: var(--color-text-primary);">
          <i class="ri-close-line"></i>
        </button>
        <div
          style="display: flex; flex-direction: column; gap: 1.5rem; font-size: 1.2rem; align-items: center; margin-top: 3rem;">
          <a href="/">Home</a>
          <a href="/clothings/equipment">Equipment</a>
          <a href="/clothings/surgical">Surgical</a>
          <a href="/clothings/supplies">Supplies</a>
          <a href="/orders">My Orders</a>
          <% if (!user || user==='unsigned') { %>
            <a href="/access" class="btn btn-primary" style="padding: 0.8rem 2rem; width: 100%; justify-content: center;">Sign In</a>
          <% } else { %>
              <a href="/logout" class="btn btn-outline" style="border-color: #ef4444; color: #ef4444;">Logout</a>
          <% } %>
        </div>
      </div>
    </header>

    <style>
      /* Responsive Tweaks inline for now */
      @media (max-width: 768px) {
        .nav-links {
          display: none !important;
        } 

        #toggleOpen {
          display: block !important;
        }
      }
      @media (max-width: 768px) {
        .acc {
          display: none !important;
        }
      }
    </style>

    <script src="/javascripts/index.js"></script>
    <script>
document.addEventListener('DOMContentLoaded', () => {
  const btn = document.getElementById('userDropdownBtn');
  const dropdown = document.getElementById('userDropdown');

  btn?.addEventListener('click', (e) => {
    e.stopPropagation(); // prevent closing immediately
    dropdown.classList.toggle('hidden');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (!dropdown.contains(e.target) && !btn.contains(e.target)) {
      dropdown.classList.add('hidden');
    }
  });
});
</script>