<%- include('./partials/Header.ejs') %>

  <style>
    @media (max-width:620px) {
      .hero-container {
        display: flex !important;
        flex-direction: column !important;
        gap: 2rem !important;
      }

      .img {
        width: 300px !important;
        height: 300px !important;
      }

      .float-div {
        height: 300px !important;
      }

      @media (max-width: 425px) {
        .newsletter-form {
          flex-direction: column;
        }
      }
    }
  </style>
  <main>
    <!-- Hero Section (Existing) -->
    <!-- Hero Section -->
    <div class="hero-section"
      style="padding: 6rem 0 4rem; background: linear-gradient(135deg, #F8FAFC 0%, #E2E8F0 100%); overflow: hidden; position: relative;">

      <!-- Background Abstract Elements -->
      <div
        style="position: absolute; top: -10%; right: -5%; width: 600px; height: 600px; background: radial-gradient(circle, rgba(6,182,212,0.05) 0%, rgba(255,255,255,0) 70%); border-radius: 50%;">
      </div>

      <div class="container hero-container"
        style="display: grid; grid-template-columns: 1.2fr 1fr; gap: 4rem; align-items: center;">
        <div class="reveal">
          <span
            style="background: rgba(6,182,212,0.1); color: var(--color-accent-primary); padding: 0.5rem 1rem; border-radius: 4px; font-weight: 600; font-size: 0.9rem; margin-bottom: 1.5rem; display: inline-block; letter-spacing: 0.5px;">
            <i class="ri-award-line"></i> TRUSTED MEDICAL SUPPLIER
          </span>
          <h1
            style="font-size: 3.5rem; color: var(--color-text-primary); margin-bottom: 1.5rem; line-height: 1.1; letter-spacing: -2px; font-weight: 800;">
            Advanced Medical <br> <span style="color: var(--color-accent-primary);">Startups Solutions</span>
          </h1>
          <p
            style="font-size: 1.15rem; color: var(--color-text-secondary); margin-bottom: 2.5rem; max-width: 550px; line-height: 1.6;">
            Equipping healthcare professionals with premium surgical instruments and hospital supplies. Quality you can
            trust, delivered with care.
          </p>
          <div style="display: flex; gap: 1rem;">
            <a href="#shop" class="btn btn-primary" style="font-size: 1.1rem; padding: 1rem 2.5rem;">Explore Catalog</a>
            <a href="/about" class="btn btn-outline" style="font-size: 1.1rem; padding: 1rem 2.5rem;">Our Mission</a>
          </div>

          <div style="margin-top: 3rem; display: flex; gap: 2rem; border-top: 1px solid #E2E8F0; padding-top: 2rem;">
            <div>
              <h4 style="font-size: 1.5rem; margin-bottom: 0.2rem; color: var(--color-text-primary);">5k+</h4>
              <p style="font-size: 0.9rem; color: var(--color-text-secondary);">Products Available</p>
            </div>
            <div>
              <h4 style="font-size: 1.5rem; margin-bottom: 0.2rem; color: var(--color-text-primary);">100%</h4>
              <p style="font-size: 0.9rem; color: var(--color-text-secondary);">Quality Certified</p>
            </div>
          </div>
        </div>

        <div class="lg-hidden reveal" style="position: relative; text-align: right;">
          <div class="animate-float" style="width: 100%; height: 500px; position: relative; z-index: 2;">
            <% if(typeof essentials !=='undefined' && essentials && essentials.heroImage) { %>
              <img src="<%= essentials.heroImage %>" alt="Medical Equipment"
                style="width: 100%; height: 100%; object-fit: contain; filter: drop-shadow(0 20px 30px rgba(0,0,0,0.1));"
                onerror="this.src='https://images.unsplash.com/photo-1631217868264-e5b90bb7e133?q=80&w=800&auto=format&fit=crop'">
              <% } else { %>
                <img src="https://images.unsplash.com/photo-1631217868264-e5b90bb7e133?q=80&w=800&auto=format&fit=crop"
                  alt="Medical Professional"
                  style="width: 100%; height: 100%; object-fit: contain; filter: drop-shadow(0 20px 30px rgba(0,0,0,0.1)); border-radius: 20px;">
                <% } %>
          </div>

          <!-- Decorative Elements -->
          <div class="animate-float"
            style="position: absolute; top: 10%; right: -5%; width: 100px; height: 100px; background: rgba(15, 23, 42, 0.05); border-radius: 50%; z-index: 1; animation-delay: 1s;">
          </div>
          <div class="animate-float"
            style="position: absolute; bottom: 10%; left: 0%; width: 80px; height: 80px; background: rgba(6, 182, 212, 0.1); border-radius: 50%; z-index: 1; animation-delay: 0.5s;">
          </div>
        </div>
      </div>
    </div>

    <!-- 1. Features Bar -->
    <section class="container reveal" style="margin-top: -3rem; position: relative; z-index: 10;">
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
        <div class="feature-box">
          <div class="feature-icon"><i class="ri-truck-line"></i></div>
          <div>
            <h3 style="font-size: 1.1rem; margin-bottom: 0.2rem;">Fast Delivery</h3>
            <p style="font-size: 0.85rem; color: var(--color-text-secondary);">Nationwide Shipping</p>
          </div>
        </div>
        <div class="feature-box">
          <div class="feature-icon"><i class="ri-shield-check-line"></i></div>
          <div>
            <h3 style="font-size: 1.1rem; margin-bottom: 0.2rem;">ISO Certified</h3>
            <p style="font-size: 0.85rem; color: var(--color-text-secondary);">100% Authentic Products</p>
          </div>
        </div>
        <div class="feature-box" onclick="window.location.href='https://wa.me/923138190150';" style="cursor:pointer;">
          <div class="feature-icon"><i class="ri-customer-service-2-line"></i></div>
          <div>
            <h3 style="font-size: 1.1rem; margin-bottom: 0.2rem;">Expert Support</h3>
            <p style="font-size: 0.85rem; color: var(--color-text-secondary);">24/7 Professional Help</p>
          </div>
        </div>
      </div>
    </section>

    <!-- 2. Shop Categories -->
    <section class="container reveal" style="padding: 4rem 1rem;">
      <div style="text-align: center; margin-bottom: 3rem;">
        <span
          style="font-size: 0.9rem; color: var(--color-text-secondary); text-transform: uppercase; letter-spacing: 1px;">Browse
          by Department</span>
        <h2 style="font-size: 2.5rem; color: var(--color-text-primary); margin-top: 0.5rem;">Medical <span
            style="color: var(--color-accent-primary);">Categories</span></h2>
      </div>
      <div style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;">
        <% if(typeof categories !=='undefined' && categories.length> 0) { %>
          <% for(let i=0; i < categories.length; i++) { %>
            <a href="/clothings/<%= categories[i].name %>" class="category-item">
              <div class="category-circle">
                <img src="<%= categories[i].image %>" alt="<%= categories[i].name %>"
                  style="width: 100%; height: 100%; object-fit: contain;">
              </div>
              <h4 style="color: var(--color-text-primary); font-size: 1rem; margin-top: 0.5rem;">
                <%= categories[i].name %>
              </h4>
            </a>
            <% } %>
              <% } else { %>
                <!-- Fallback if no categories are set -->
                <a href="/clothings/equipment" class="category-item">
                  <div class="category-circle">
                    <i class="ri-stethoscope-line" style="font-size: 2.5rem; color: var(--color-accent-primary);"></i>
                  </div>
                  <h4 style="color: var(--color-text-primary);">Equipment</h4>
                </a>
                <a href="/clothings/surgical" class="category-item">
                  <div class="category-circle">
                    <i class="ri-knife-line" style="font-size: 2.5rem; color: var(--color-accent-primary);"></i>
                  </div>
                  <h4 style="color: var(--color-text-primary);">Surgical</h4>
                </a>
                <a href="/clothings/disposables" class="category-item">
                  <div class="category-circle">
                    <i class="ri-drop-line" style="font-size: 2.5rem; color: var(--color-accent-primary);"></i>
                  </div>
                  <h4 style="color: var(--color-text-primary);">Disposables</h4>
                </a>
                <% } %>
      </div>
    </section>

    <!-- 3. Featured Grid (Existing) -->
    <section id="shop" class="container" style="padding: 2rem 1rem;">
      <div class="reveal"
        style="display: flex; justify-content: space-between; align-items: end; margin-bottom: 2rem; border-bottom: 1px solid var(--color-border); padding-bottom: 1rem;">
        <div>
          <h2 style="font-size: 2rem; color: var(--color-text-primary); margin-bottom: 0;">Featured <span
              style="color: var(--color-accent-primary);">Products</span></h2>
        </div>
        <a href="/clothings/all"
          style="color: var(--color-accent-primary); font-weight: 500; display: flex; align-items: center; gap: 5px;">View
          All <i class="ri-arrow-right-line"></i></a>
      </div>

      <div class="reveal-stagger"
        style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 2rem;">
        <% if(feat.length> 0) { %>
          <% feat.forEach(function(product){ %>
            <div class="product-card" onclick="window.location.href='/products/<%= product._id %>'"
              style="cursor: pointer; position: relative;">
              <div
                style="width: 100%; height: 250px; overflow: hidden; background: #fff; padding: 1rem; display: flex; align-items: center; justify-content: center;">
                <img src="<%= product.mainImage %>" alt="<%= product.title %>"
                  style="max-width: 100%; max-height: 100%; object-fit: contain;">
              </div>
              <% if(product.discountPercent> 0) { %>
                <div
                  style="position: absolute; top: 1rem; left: 1rem; background: #ef4444; color: white; padding: 0.2rem 0.6rem; border-radius: 4px; font-weight: 600; font-size: 0.8rem;">
                  -<%= product.discountPercent %>%
                </div>
                <% } %>
                  <div style="padding: 1.2rem; border-top: 1px solid var(--color-border);">
                    <p
                      style="font-size: 0.85rem; color: var(--color-text-secondary); margin-bottom: 0.3rem; text-transform: uppercase; letter-spacing: 0.5px;">
                      <%= (product.category && product.category.length> 0) ? product.category[0] : 'Medical' %>
                    </p>
                    <h3
                      style="font-size: 1.1rem; margin: 0 0 0.5rem 0; line-height: 1.3; font-weight: 600; height: 2.6rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                      <%= product.title %>
                    </h3>

                    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem;">
                      <div>
                        <% if (product.discountPercent> 0) { %>
                          <div style="display:flex; flex-direction: column;">
                            <span style="font-weight: 700; color: var(--color-text-primary); font-size: 1.2rem;">
                              <span style="font-size: 0.9rem;">PKR</span>
                              <%= (product.price - (product.price * product.discountPercent / 100)).toFixed(0) %>
                            </span>
                            <span style="font-size:0.85rem; text-decoration:line-through; color: #94a3b8;">
                              PKR <%= product.price %>
                            </span>
                          </div>
                          <% } else { %>
                            <span style="font-size:1.2rem; font-weight: 700; color: var(--color-text-primary);">
                              <span style="font-size: 0.9rem;">PKR</span>
                              <%= product.price %>
                            </span>
                            <% } %>
                      </div>
                      <button class="btn btn-outline" style="padding: 0.5rem; border-radius: 50%;"><i
                          class="ri-add-line"></i></button>
                    </div>
                  </div>
            </div>
            <% }) %>
              <% } else { %>
                <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
                  <p style="font-size: 1.1rem; color: var(--color-text-secondary);">No featured equipment found yet.</p>
                </div>
                <% } %>
      </div>
    </section>

    <!-- 4. Promo Banner -->
    <!-- <section class="container reveal" style="padding: 4rem 1rem;">
      <div class="promo-banner">
        <h2 style="font-size: 3rem; margin-bottom: 1rem;">End of Season Clearance!</h2>
        <p style="font-size: 1.4rem; margin-bottom: 2rem;">Up to 25% Off on selected winter wear.</p>
        <a href="/clothings/coats" class="btn" style="background: white; color: var(--color-accent-primary);">Shop
          Sale</a>
        
        <div class="animate-float"
          style="position: absolute; top: -20px; left: -20px; width: 100px; height: 100px; background: rgba(255,255,255,0.2); border-radius: 50%;">
        </div>
        <div class="animate-float"
          style="position: absolute; bottom: -20px; right: -20px; width: 150px; height: 150px; background: rgba(255,255,255,0.2); border-radius: 50%; animation-delay: 1s;">
        </div>
      </div>
    </section> -->

    <!-- 5. Trendy Styles (Existing) -->
    <section class="container" style="padding: 0 1rem 4rem;">
      <div class="reveal"
        style="display: flex; justify-content: space-between; align-items: end; margin-bottom: 2rem; border-bottom: 1px solid var(--color-border); padding-bottom: 1rem;">
        <div>
          <h2 style="font-size: 2rem; color: var(--color-text-primary); margin-bottom: 0;">New <span
              style="color: var(--color-accent-primary);">Arrivals</span></h2>
        </div>
      </div>
      <div class="reveal-stagger"
        style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 2rem;">
        <% if(trendy.length> 0) { %>
          <% trendy.forEach(function(product){ %>
            <div class="product-card" onclick="window.location.href='/products/<%= product._id %>'"
              style="cursor: pointer; background: white; border-radius: var(--border-radius-lg); padding: 1rem;">
              <div
                style="width: 100%; height: 250px; border-radius: var(--border-radius-md); overflow: hidden; margin-bottom: 1rem; display: flex; align-items: center; justify-content: center; background: #f8fafc;">
                <img src="<%= product.mainImage %>" alt="<%= product.title %>"
                  style="max-width: 100%; max-height: 100%; object-fit: contain;">
              </div>
              <h3 style="font-size: 1.1rem; margin-bottom: 0.5rem; font-weight: 600;">
                <%= product.title %>
              </h3>

              <div style="display: flex; gap: 5px; margin-bottom: 1rem;">
                <% if (product.color && Array.isArray(product.color)) { %>
                  <% for(let i=0; i < product.color.length; i++) { %>
                    <span
                      style="--dot-color: <%= product.color[i] %>; width: 12px; height: 12px; border-radius: 50%; background-color: var(--dot-color); display: inline-block; border: 1px solid #ddd;"></span>
                    <% } %>
                      <% } %>
              </div>
              <button class="btn btn-primary" style="width: 100%; padding: 0.6rem;">Quick Order</button>
            </div>
            <% }) %>
              <% } else { %>
                <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
                  <p style="font-size: 1.1rem;">No new arrivals found.</p>
                </div>
                <% } %>
      </div>
    </section>

    <!-- 6. Testimonials -->
    <section class="container reveal"
      style="padding: 4rem 1rem; background: var(--color-bg-primary); border-top: 1px solid var(--color-border);">
      <div style="text-align: center; margin-bottom: 3rem;">
        <h2 style="font-size: 2.5rem; color: var(--color-text-primary);">Trusted by <span
            style="color: var(--color-accent-primary);">Professionals</span></h2>
        <p style="color: var(--color-text-secondary);">Feedback from our valued healthcare partners</p>
      </div>
      <div class="reveal-stagger"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">

        <% if (testimonials && testimonials.length> 0) { %>
          <% testimonials.forEach(t=> { %>
            <div class="testimonial-card">
              <div style="color: #F59E0B; font-size: 1.1rem; margin-bottom: 1rem;">★★★★★</div>
              <p style="color: var(--color-text-secondary); font-style: italic; line-height: 1.6;">"<%= t.message %>"
              </p>
              <div class="testimonial-user" style="margin-top: 1.5rem; display: flex; align-items: center; gap: 1rem;">
                <div
                  style="width: 40px; height: 40px; background: #e2e8f0; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--color-text-secondary);">
                  <i class="ri-user-line"></i>
                </div>
                <div>
                  <h4 style="margin: 0; font-size: 1rem; font-weight: 600;">
                    <%= t.username %>
                  </h4>
                  <% if (t.instagramLink) { %>
                    <span style="font-size: 0.8rem; color: var(--color-accent-primary);"><a
                        href="<%= t.instagramLink %>" target="_blank">Verified Client</a></span>
                    <% } else { %>
                      <span style="font-size: 0.8rem; color: var(--color-text-secondary);">Verified Client</span>
                      <% } %>
                </div>
              </div>
            </div>
            <% }) %>
              <% } else { %>
                <div style="text-align: center; grid-column: 1/-1;">
                  <p>No testimonials yet.</p>
                </div>
                <% } %>

      </div>
    </section>


    <!-- 7. Instagram Gallery REPLACED WITH BRANDS -->
    <section class="container reveal" style="padding: 4rem 1rem; border-top: 1px solid var(--color-border);">
      <div style="text-align: center; margin-bottom: 2rem;">
        <h2 style="font-size: 2.5rem;">Our <span style="color: var(--color-accent-primary);">Partners</span></h2>
        <p style="color: var(--color-text-secondary);">We collaborate with top medical manufacturers</p>
      </div>
      <div class="gallery-grid"
        style="grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 2rem; align-items: center; opacity: 0.6;">
        <div class="gallery-item"
          style="height: auto; text-align: center; border: 1px solid #ddd; padding: 1rem; border-radius: 8px;">
          <h4 style="color: #64748b;">PARTNER 01</h4>
        </div>
        <div class="gallery-item"
          style="height: auto; text-align: center; border: 1px solid #ddd; padding: 1rem; border-radius: 8px;">
          <h4 style="color: #64748b;">PARTNER 02</h4>
        </div>
        <div class="gallery-item"
          style="height: auto; text-align: center; border: 1px solid #ddd; padding: 1rem; border-radius: 8px;">
          <h4 style="color: #64748b;">PARTNER 03</h4>
        </div>
        <div class="gallery-item"
          style="height: auto; text-align: center; border: 1px solid #ddd; padding: 1rem; border-radius: 8px;">
          <h4 style="color: #64748b;">PARTNER 04</h4>
        </div>
      </div>
    </section>

    <!-- 8. Newsletter -->
    <section class="container reveal" style="padding: 4rem 1rem;">
      <div class="newsletter-box"
        style="background: var(--color-secondary-accent); padding: 4rem 2rem; border-radius: var(--border-radius-lg); text-align: center; color: white;">

        <h2 style="font-size: 2.5rem; color: white; margin-bottom: 1rem;">Stay Updated</h2>
        <p style="margin-top: 1rem; color: #cbd5e1; max-width: 600px; margin-left: auto; margin-right: auto;">Subscribe
          to receive the latest updates on medical equipment, exclusive offers for hospitals, and industry news.</p>
        <form class="newsletter-form" onsubmit="event.preventDefault(); alert('Subscribed!');"
          style="max-width: 500px; margin: 2rem auto 0; display: flex; gap: 10px;">
          <input type="email" placeholder="Your Email Address" class="newsletter-input" required
            style="flex: 1; padding: 1rem; border-radius: 4px; border: none; outline: none;">
          <button type="submit" class="btn btn-primary" style="border-radius: 4px; padding: 0 2rem;">Subscribe</button>
        </form>
      </div>
    </section>
  </main>

  <% if(error && error.length> 0) { %>
    <div
      style="position: fixed; top: 20px; right: 20px; background: #fee2e2; color: #dc2626; padding: 1rem 2rem; border-radius: 8px; box-shadow: var(--shadow-md); z-index: 3000;">
      <%= error[0] %>
    </div>
    <% } %>

      <%- include('./partials/Footer.ejs') %>